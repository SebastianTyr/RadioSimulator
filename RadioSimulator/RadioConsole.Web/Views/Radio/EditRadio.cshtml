@model RadioConsole.Web.Entities.RadioEntity

<h1>EditRadio</h1>

<h4>RadioModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div id="success-alert" class="alert alert-success" style="display: none">Record updated</div>
        <div id="error-alert" class="alert alert-danger" style="display: none">Ups.. something goes wrong while record updating, make sure that all fields are filed properly</div>

        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    Choose radio type
                    <option value="MobileDevice">Mobile Device</option>
                    <option value="CarDevice">Car Device</option>
                    <option value="BaseStation">Base Station</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SignalStrength" class="control-label"></label>
                <input asp-for="SignalStrength" class="form-control" />
                <span asp-validation-for="SignalStrength" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BatteryLevel" class="control-label"></label>
                <input asp-for="BatteryLevel" class="form-control" />
                <span asp-validation-for="BatteryLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mode" class="control-label"></label>
                <select asp-for="Mode" class="form-control">
                    Choose radio type
                    <option value="VoiceCall">Voice Call</option>
                    <option value="DataTransit">Data Transit</option>
                    <option value="Idle">Idle</option>
                </select>
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control">
                    <option value="Police">Police</option>
                    <option value="Emergency">Emergency</option>
                    <option value="FireBrigade">FireBrigade</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-action="EditRadio" type="submit" value="Update" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Radio" asp-action="RegisterConfirmation" class="btn btn-outline-primary">Back to List</a>
</div>
